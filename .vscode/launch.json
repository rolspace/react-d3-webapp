{
  "configurations": [
    {
      "name": "Local client: launch browser",
      "request": "launch",
      "type": "chrome",
      "preLaunchTask": "local-client",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/src/client"
    },
    {
      "name": "Local API: launch",
      "command": "yarn start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/src/server"
    },
    {
      "name": "Docker API: launch",
      "type": "docker",
      "request": "launch",
      "serverReadyAction": {
        "action": "openExternally"
      },
      "preLaunchTask": "docker-run-server: debug",
      "platform": "node",
      "node": {
        "package": "${workspaceFolder}/src/server/package.json",
        "localRoot": "${workspaceFolder}/src/server"
      }
    }
  ]
}
