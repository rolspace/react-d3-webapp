{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "local-client",
      "command": "yarn start dev",
      "options": {
        "cwd": "${workspaceFolder}/src/client"
      }
    },
    {
      "type": "docker-build",
      "label": "docker-build-server",
      "platform": "node",
      "dockerBuild": {
        "dockerfile": "${workspaceFolder}/src/server/Dockerfile",
        "context": "${workspaceFolder}/src/server",
        "pull": true
      },
      "node": {
        "package": "${workspaceFolder}/src/server/package.json"
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run-server: debug",
      "dependsOn": ["docker-build-server"],
      "dockerRun": {
        "ports": [
          {
            "containerPort": 9000,
            "hostPort": 9000
          }
        ],
        "env": {
          "APPLICATION_ID": "",
          "APPLICATION_SECRET": "",
          "CLIENT_URL": "http://localhost:8000",
          "NODE_ENV": "development"
        }
      },
      "node": {
        "package": "${workspaceFolder}/src/server/package.json",
        "enableDebugging": true
      }
    }
  ]
}
