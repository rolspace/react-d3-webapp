{
  "env": {
      "es6": true,
      "jest": true,
      "node": true
  },
  "extends": "standard",
  "parserOptions": {
      "ecmaVersion": 2021
  },
  "plugins": [
      "jest"
  ],
  "rules": {
    "brace-style": ["error", "1tbs", { "allowSingleLine": false }],
    "comma-dangle": ["error", "always-multiline"],
    "curly": ["error", "all"],
    "prefer-destructuring": "error",
    "quotes": ["error", "single"],
    "react/prop-types": ["error", { "ignore": ["location", "query", "code"] }]
  }
}
